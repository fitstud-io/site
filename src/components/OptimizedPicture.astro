const {
  src,
  alt,
  widths = [392, 700, 980, 1960],
  sizes =  `(max-width: 360px) 392px,
            (max-width: 720px) 700px,
            (max-width: 1600px) 980px,
            1960px`,
  formats = ["avif"],
  fallbackFormat = "avif",
  class: className = "group-hover:scale-[1.03] transition duration-300 w-full"
} = Astro.props;

// const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,webp,gif,avifwebp,gif,avif}')
