---
import type { ImageMetadata } from 'astro';
import { Picture } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  widths?: number[];
  sizes?: string;
  // formats?: string[];
  // fallbackFormat?: string;
  // decoding: sync | async | auto;
  loading: "lazy" | "eager" | null | undefined;
  class?: string;
}

const {
  src,
  alt,
  loading,
  widths = [392, 700, 980, 1960],
  sizes =  `(max-width: 360px) 392px,
            (max-width: 720px) 700px,
            (max-width: 1600px) 980px,
            1960px`,
  // formats = ["avif", 'webp'],
  // fallbackFormat = "webp",
  class: className = "group-hover:scale-[1.03] transition duration-300 w-full"
} = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>("../assets/images/*");
---

<Picture
  src={images[src]()}
  alt={alt}
  widths={widths}
  sizes={sizes}
  loading={loading}
  class={className}
/>
