---
import BaseLayout from "@layouts/BaseLayout.astro";
import { SEARCH_PAGE_TITLE, SEARCH_PAGE_DESCRIPTION } from "@consts";
import Pagefind from "astro-pagefind/components/Search";
---

<BaseLayout title={SEARCH_PAGE_TITLE} description={SEARCH_PAGE_DESCRIPTION}>
  <section class="mx-auto w-full max-w-screen-2xl px-4 md:px-6">
    <div class="min-h-[500px] flex flex-col items-center justify-start pt-32">
      <div class="w-full">
        <Pagefind
          id="search"
          className="pagefind-ui w-full h-full"
          uiOptions={{ showImages: false }}
        />
      </div>
    </div>
  </section>
</BaseLayout>

<style is:global>
.pagefind-ui {
    @apply dark:bg-zinc-800;
  }
  .pagefind-ui__search-input {
    @apply h-[34px] dark:bg-black dark:text-white dark:border-0 focus:border-0 focus:outline-none;
  }
  .pagefind-ui__results,
  .pagefind-ui__results.svelte-j9e30.svelte-j9e30,
  .pagefind-ui__result.svelte-j9e30.svelte-j9e30,
  .pagefind-ui__result.svelte-j9e30.svelte-j9e30:last-of-type,
  .pagefind-ui__results:last-of-type {
    @apply border-0;
  }
  .pagefind-ui__result.svelte-j9e30.svelte-j9e30 {
    @apply my-5 p-0 border-0;
  }
  .pagefind-ui__search-clear {
    @apply dark:bg-black;
  }
  .pagefind-ui__result-title.svelte-j9e30 .pagefind-ui__result-link.svelte-j9e30,
  .pagefind-ui__message,
  .pagefind-ui__message.svelte-e9gkc3,
  .pagefind-ui__result-title,
  .pagefind-ui__result-title.svelte-j9e30.svelte-j9e30,
  .pagefind-ui__result-link,
  .pagefind-ui__result-link.svelte-j9e30 {
    @apply dark:text-white text-2xl lg:text-3xl xl:text-3xl font-light;
  }
  .pagefind-ui__result-excerpt.svelte-j9e30.svelte-j9e30 {
    @apply  dark:text-gray-400 text-xl md:text-2xl lg:text-2xl xl:text-2xl font-extralight;
  }
  .pagefind-ui__button.svelte-e9gkc3{
    @apply dark:bg-black dark:text-white dark:border-0 my-5;
  }

</style>
